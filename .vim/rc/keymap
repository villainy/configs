" NERDTree file browser
nmap <silent> <C-x> :NERDTreeToggle<CR>
" Tagbar tag browser
nmap <silent> <C-t> :TagbarToggle<CR>
" Buffergator buffer browser
nmap <silent> <C-b> :BuffergatorToggle<CR>
" Fuzzyfinder file and buffer list
nmap ,f :FufFileWithCurrentBufferDir<CR>
nmap ,b :FufBuffer<CR>

" search from visual mode selection
vnoremap // y/<C-R>"<CR>"

" clear search highlight
" This is breaking arrow key movement for some reason
"nnoremap <esc> :noh<return><esc>

" Tabularize visual mode mappings
vmap <silent> t= :Tabularize /=<CR>
vmap <silent> t: :Tabularize /:\zs<CR>
vmap <silent> t; :Tabularize /;\zs<CR>
vmap <silent> t> :Tabularize /=><CR>

nmap <silent> <Leader>s :SyntasticCheck<CR>

" Git stuff
nmap <silent> <Leader>gg :GitGutterToggle<CR>
nmap <silent> <Leader>gn :GitGutterNextHunk<CR>
nmap <silent> <Leader>gp :GitGutterPrevHunk<CR>
nmap <silent> <Leader>gs :Gstatus<CR>
nmap <silent> <Leader>gc :Gcommit<CR>

" Toggle line wrapping
nnoremap <silent> <leader>w :set wrap!<CR>

" Enable perlre search
nnoremap <leader>/ :call eregex#toggle()<CR>

" Move pop from ctrl-t
nmap <silent> <leader>] :pop<CR>

" Open tag definition in vertical split
map <C-W>[ :vsp <CR>:exec("tag ".expand("<cword>"))<CR>

" Open scratch buffers
nmap <C-s>w :Sscratch<CR>
nmap <C-s>v :Vscratch<CR>

" Init cscope database
nmap <F12> <Plug>CscopeDBInit

" Gundo
nnoremap <silent> U :GundoToggle<CR>

" vim: ft=vim
